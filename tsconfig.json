{
  "compilerOptions": {
    "experimentalDecorators": true,
    "target": "es5",
    "lib": [
      "es2017",
      "es2015",
      "dom",
      "es6"
    ],
    "module": "commonjs",
    "outDir": "dist",
    "sourceMap": false,
    "strict": true,
    "declaration": false
  },
  "include": [
    "./src/**/*",
    "./vendor/utils/typescript",
    "./vendor/utils/bash",
    "./vendor/utils/bash/**/*",
    "./vendor/utils/powershell",
    "./vendor/utils/powershell/**/*",
  ],
  "exclude": [
    "node_modules"
  ],
  "hooks": [
    "copy-files"
  ]
}